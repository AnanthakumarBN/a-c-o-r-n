<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    
    <application>
        <message-bundle>acorn.configuration.Messages</message-bundle>
    </application>
    
    <lifecycle>
        <phase-listener>
            acorn.userManagement.AuthenticationPhaseListener
        </phase-listener>
    </lifecycle>
    
    <!-- Managed Beans -->
    
    <managed-bean>
        <managed-bean-name>UserManager</managed-bean-name>
        <managed-bean-class>acorn.userManagement.UserManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>      
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>UserListBean</managed-bean-name>
        <managed-bean-class>acorn.userManagement.UserListBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>AddVisualizationBean</managed-bean-name>
        <managed-bean-class>acorn.visualizationParser.AddVisualizationBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>UserDetailsBean</managed-bean-name>
        <managed-bean-class>acorn.userManagement.UserDetailsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>AddModelBean</managed-bean-name>
        <managed-bean-class>acorn.sbmlParser.AddModelBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>ModelListBean</managed-bean-name>
        <managed-bean-class>acorn.model.ModelListBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>TaskBean</managed-bean-name>
        <managed-bean-class>acorn.model.TaskBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>TaskListBean</managed-bean-name>
        <managed-bean-class>acorn.task.TaskListBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>TaskDetailsBean</managed-bean-name>
        <managed-bean-class>acorn.task.TaskDetailsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>FbaResultsBean</managed-bean-name>
        <managed-bean-class>acorn.task.FbaResultsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>FvaResultsBean</managed-bean-name>
        <managed-bean-class>acorn.task.FvaResultsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>KgeneResultsBean</managed-bean-name>
        <managed-bean-class>acorn.task.KgeneResultsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>RscanResultsBean</managed-bean-name>
        <managed-bean-class>acorn.task.RscanResultsBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>ErrorBean</managed-bean-name>
        <managed-bean-class>acorn.errorHandling.ErrorBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <!-- Global navigation rules -->
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>error</from-outcome>
            <to-view-id>/error.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>modelList</from-outcome>
            <to-view-id>/modelList.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>taskList</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <!-- Local navigation rules -->

    <navigation-rule>
        <from-view-id>/modelDetails.jsp</from-view-id>
        <navigation-case>
            <from-outcome>modelDeleted</from-outcome>
            <to-view-id>/modelList.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>FBA</from-outcome>
            <to-view-id>/fbaParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>RSCAN</from-outcome>
            <to-view-id>/rscanParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>KGENE</from-outcome>
            <to-view-id>/kgeneParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TaskOK</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TaskNotOK</from-outcome>
            <to-view-id>/modelDetails.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/fbaParameters.jsp</from-view-id>
        <navigation-case>
            <from-outcome>TaskOK</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TaskNotOK</from-outcome>
            <to-view-id>/fbaParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/modelDetails.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/rscanParameters.jsp</from-view-id>
        <navigation-case>
            <from-outcome>TaskOK</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TaskNotOK</from-outcome>
            <to-view-id>/rscanParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/modelDetails.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/kgeneParameters.jsp</from-view-id>
        <navigation-case>
            <from-outcome>TaskOK</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>TaskNotOK</from-outcome>
            <to-view-id>/kgeneParameters.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>back</from-outcome>
            <to-view-id>/modelDetails.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/login.jsp</from-view-id>
        <navigation-case>
            <from-outcome>authenticated</from-outcome>
            <to-view-id>/taskList.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/modelListContent.jsp</from-view-id>
        <navigation-case>
            <from-outcome>modelDetails</from-outcome>
            <to-view-id>/modelDetails.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <!-- Others --> 
    
    <component>
        <component-type>component.CustomSelectOneRadio</component-type>
        <component-class>com.srijeeb.jsf.components.UICustomSelectOneRadio
        </component-class>
        <component-extension>
            <component-family>CustomSelectOneRadio</component-family>
            <renderer-type>renderer.CustomSelectOneRadio</renderer-type>
        </component-extension>
    </component>
    <render-kit>
        <renderer>
            <component-family>CustomSelectOneRadio</component-family>
            <renderer-type>renderer.CustomSelectOneRadio</renderer-type>
            <renderer-class>com.srijeeb.jsf.renderers.HTMLCustomSelectOneRadioRenderer
            </renderer-class>    
        </renderer>
    </render-kit>
</faces-config>
